page {
  color: #666;
  padding: 10rpx;
}

.slides {
  margin-top: 10rpx;
}

.slides swiper {
  height: 320rpx;
}

.slides navgator {
  width: 100%;
  height: 100%;
}

.slides image {
  width: 100%;
  height: 100%;
}

/* 视频列表 */

.video_wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  padding-top: 10px;
  padding-right: 5rpx;
  justify-content: space-between;
}

.video_item {
  width: 48%;
  margin-bottom: 20rpx;
}

.video_img {
  position: relative;
}

.video_img image {
  width: 100%;
  height: 160px;
  border-radius: 16rpx;
}

.video_img .video_info {
  display: flex;
  justify-content: space-around;
  position: absolute;
  left: 0;
  bottom: 8rpx;
  width: 100%;
  color: #fff;
  font-size: 20rpx;
}

.count_image {
  width: 24rpx;
  padding-right: 8rpx;
}

.video_title {
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
}